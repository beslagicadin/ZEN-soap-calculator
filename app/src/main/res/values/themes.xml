<resources>
    <!-- Base application theme. -->
    <style name="Theme.ZenSoapCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sea</item>
        <item name="colorPrimaryVariant">@color/sand</item>
        <item name="colorOnPrimary">@color/sky</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.ZenSoapCalculator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ZenSoapCalculator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.ZenSoapCalculator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>